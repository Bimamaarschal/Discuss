<!DOCTYPE html>
<html>
<head>
  <title>Detail Postingan</title>
</head>
<body>
    <form method="POST" action="/posts/<%= post._id %>?_method=DELETE">
        <button type="submit">Hapus Postingan</button>
      </form>
  <h1>Detail Postingan</h1>
  
  <h2><%= post.title %></h2>
  <p><%= post.content %></p>
  
  <p>Jumlah Likes: <%= post.likes %></p>
  
  <!-- Tombol "Like" -->
  <form method="POST" action="/posts/<%= post._id %>/like">
    <button type="submit">Like</button>
  </form>
  
  <!-- Form Komentar -->
  <h3>Komentar</h3>
  <form method="POST" action="/posts/<%= post._id %>/comment">
    <textarea name="text" placeholder="Tambahkan komentar..." rows="4" cols="50"></textarea>
    <button type="submit">Kirim Komentar</button>
  </form>
  
  <!-- Daftar Komentar -->
  <ul>
    <% post.comments.forEach(function(comment) { %>
      <li><%= comment.text %></li>
    <% }); %>
  </ul>


</body>
</html>